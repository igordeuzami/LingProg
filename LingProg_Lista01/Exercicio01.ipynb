   "source": [
    "import math\n",
    "\n",
    "raio = input(\"Digite o raio do Circulo: \")\n",
    "\n",
    "r = float(raio)\n",
    "\n",
    "area = (r ** 2) * math.pi\n",
    "\n",
    "print(\"A area do circulo e:\", area) "
